{
  "name": "express-boilerplate",
  "version": "1.0.0",
  "description": "",
  "main": "./index.js",
  "scripts": {
    "start": "npm run build && npm run dev",
    "test": "jest --no-cache",
    "build": "rm -rf ./dist && babel --ignore '**/*.spec.js' -d ./dist ./src && npm run copy",
    "dev": "nodemon --exec babel-node src --unhandled-rejections=strict",
    "prepareDist": "npm run lint && npm test && npm run build",
    "dist": "npm run prepareDist && cd dist && npm publish --access public && cd ..",
    "copy": "cp ./package.json ./ReadMe.md ./LICENSE ./dist/",
    "lint": "eslint ."
  },
  "engines": {
    "node": ">=7.6"
  },
  "engineStrict": true,
  "repository": {
    "type": "git",
    "url": ""
  },
  "keywords": [],
  "author": "Laufire Technologies",
  "license": "ISC",
  "homepage": "",
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.5",
    "@babel/node": "^7.22.5",
    "@babel/plugin-transform-runtime": "^7.6.2",
    "@babel/preset-env": "^7.5.5",
    "@babel/runtime": "^7.7.2",
    "acorn": "^6.3.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.3",
    "babel-jest": "^24.9.0",
    "eslint": "^5.16.0",
    "jest": "^24.9.0",
    "jest-cli": "^24.9.0",
    "nodemon": "^2.0.22",
    "pino-pretty": "^3.2.2",
    "regenerator-runtime": "^0.13.2"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "./src/**/*.js"
    ],
    "coverageDirectory": "./.coverage",
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "modulePathIgnorePatterns": [
      "<rootDir>/dist/"
    ],
    "testRegex": "src/.*\\.spec\\.js$"
  },
  "directories": {
    "example": "examples",
    "test": "test"
  },
  "dependencies": {
    "@laufire/utils": "3.0.0-0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "module-alias": "^2.2.3",
    "path-to-regexp": "^6.2.1",
    "pino": "^5.13.4"
  },
  "_moduleAliases": {
    "@base": "src/base/",
    "@controllers": "src/controllers",
    "@getRepos": "src/getRepos",
    "@middlewares": "src/middlewares",
    "@setup": "src/setup",
    "@helpers": "src/helpers"
  },
  "workspaces": [
    "./../resources/dist/",
    "./../log/dist/",
    "./../auth/dist/",
    "./../info/dist/",
    "./../schema/dist/",
    "./../signedURL/dist/",
    "./../validate/dist/",
    "./../cache/dist/"
  ]
}
